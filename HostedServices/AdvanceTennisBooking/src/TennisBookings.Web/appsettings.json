{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TennisBookings;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },

  "AWS": {
    "Region": "eu-west-2"
  },

  "AllowedHosts": "*",

  "Features": {
    "HomePage": {
      "EnableGreeting": true,
      "EnableWeatherForecast": true,
      "ForecastSectionTitle": "What's the weather doing?"
    },
    "WeatherForecasting": {
      "EnableWeatherForecast": true
    },
    "Greeting": {
      "GreetingColour": "#000000"
    }
  },

  "ExternalServices": {
    "WeatherApi": {
      "Url": "http://localhost:5001",
      "MinsToCache": 30
    },
    "TennisPlayersApi": {
      "Url": "http://localhost:5006"
    },
    "StatisticsApi": {
      "Url": "http://localhost:5010"
    }
  },

  "Content": {
    "CheckForProfanity": true
  },

  "Membership": {
    "MonthlyMembershipFullPrice": 25
  },

  "ClubSettings": {
    "PeakStartHour": 16,
    "PeakEndHour": 20,
    "OpenHour": 7,
    "CloseHour": 22,
    "WinterCourtStartHour": 9,
    "WinterCourtEndHour": 15,
    "WinterMonths": [ 1, 2, 3, 10, 11, 12 ]
  },

  "CourtBookings": {
    "MaxRegularBookingLengthInHours": 3,
    "MaxPeakBookingLengthInHours": 2
  },

  "ScoreProcessing": {
    "S3BucketName": "tennis-scores"
  },

  "UseLocalStack": false
}

<Page x:Class="State_Design_Pattern.UI.EntryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:State_Design_Pattern.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Wheat"
       Title="Entry Page">

    <Border Padding="65">
        <StackPanel>
            <Label Content="Atendee Name:" FontWeight="Bold" />
            <TextBox x:Name="txtAttendee" Height="24" Margin="20,0,0,20" Width="434" HorizontalAlignment="Left"/>
            <Label Content="Number of Tickets:" FontWeight="Bold" ></Label>
            <TextBox x:Name="txtTicketCont" Height="24" Margin="20,0,0,0" Width="434" HorizontalAlignment="Left" PreviewTextInput="ValidateNumber"/>
        </StackPanel>
    </Border>
</Page>
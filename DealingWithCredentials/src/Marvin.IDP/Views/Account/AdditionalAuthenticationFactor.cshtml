@model AdditionalAuthenticationFactorViewModel
<div>
    <div class="page-header">
        <h1>Input your TOTP</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Input your TOTP</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="AdditionalAuthenticationFactor">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <input type="hidden" asp-for="RememberLogin" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Totp"></label>
                                <input class="form-control" 
                                       placeholder="Your TOTP" asp-for="Totp" autofocus>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary">Log in</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

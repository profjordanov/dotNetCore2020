@model ImageGallery.Client.ViewModels.GalleryIndexViewModel

<div class="bottomMarginDefault">
</div>

<div class="container">


    @foreach (var item in Model.Images)
    {
        <div class="pull-left col-md-4">
            <div>
                <img class="thumbnailImage" src="@("https://localhost:44366/images/" + item.FileName)" />
            </div>
            <div>
                <div class="h5">@item.Title</div>
                <div class="bottomMarginDefault">
                    <a asp-action="EditImage" asp-controller="Gallery" asp-route-id="@item.Id">Edit title</a> |
                    <a asp-action="DeleteImage" asp-controller="Gallery" asp-route-id="@item.Id">Delete image</a>
                </div>
            </div>
        </div>
    }
   

    @if (!Model.Images.Any())
    {
        <div class="pull-left">
            <div>
                <img class="thumbnailImage" src="https://localhost:44366/images/noimages.png" />
            </div>
            <div>
                <div class="h4">Upload your first image</div>
                You must be new here - you haven't uploaded any images yet! :)  <br />
                Go outside, take a few stunning pictures and upload them to fully enjoy your image gallery.
            </div>
        </div>
    }
</div> 